<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.UserController">
    <children>
        <Pane prefHeight="200.0" prefWidth="200.0" />
        <Pane layoutX="1.0" prefHeight="406.0" prefWidth="337.0" style="-fx-background-color: #e47873;">
            <children>
                <Button contentDisplay="BOTTOM" graphicTextGap="6.0" layoutX="209.0" layoutY="307.0" mnemonicParsing="false" onAction="#signin" text="Sign In" textFill="#15151787">
